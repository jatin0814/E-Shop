<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if(products.length > 0) { %>
                <ul>
                    <% products.forEach(p => { %>
                        <li class="cart">
                            <p><b>Name:</b><%= p.productId.title %></p>
                            <p><b>Quantity: </b><%= p.quantity %></p>
                            <form method="POST" action="/cart-delete-item">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
                                <button class="btn" type="submit">Delete</button>
                                <input type="hidden" name="productId" value="<%= p.productId._id %>" />
                            </form>
                        </li>
                    <% }) %>
                </ul>
                <!--<form method="POST" action="/check-order">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
                    <button class="btn" type="submit" style="margin: 8px 42%;">Order</button>
                </form>-->
                <a href="/checkout" class="btn">Order</a>
            <% } else { %>
                <h1>Cart is Empty :/</h1>
                <% } %>
                
        </main>
        <%- include('../includes/end.ejs') %>